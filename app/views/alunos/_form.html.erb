<%= form_with(model: aluno, local: true) do |form| %>
  <% if aluno.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(aluno.errors.count, "erro") %> encontrado(s):</h2>
      <ul>
        <% aluno.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :idade %>
    <%= form.number_field :idade %>
  </div>

  <div>
    <%= form.label :cpf %>
    <%= form.text_field :cpf %>
  </div>

  <div>
    <%= form.label :telefone %>
    <%= form.telephone_field :telefone %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :data_de_aniversario %>
    <%= form.date_field :data_de_aniversario %>
  </div>

  <div>
    <%= form.label :endereco %>
    <%= form.text_area :endereco %>
  </div>

  <div>
    <%= form.label :observacao %>
    <%= form.text_area :observacao %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.check_box :status %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
