<h1>Lista de Alunos</h1>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Email</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome %></td>
        <td><%= aluno.idade %></td>
        <td><%= aluno.email %></td>
        <td>
          <%= link_to "Ver", aluno_path(aluno) %> |
          <%= link_to "Editar", edit_aluno_path(aluno) %> |
          <%= link_to "Excluir", aluno_path(aluno), method: :delete, data: { confirm: "Tem certeza?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Novo Aluno", new_aluno_path %>
